[colors]
fg = #f8f8f2
bg = #282a36
base-bg    = ${self.bg:#dd282a36}
text-fg = ${self.fg}
text-bg = ${self.bg}
selection = #44475a
comment = #6272a4
glyph-bg   = ${self.comment}
module-bg  = ${self.comment}
cyan  = #8be9fd
green  = #50fa7b
orange = #ffb86c
pink  = #ff79c6
purple  = #bd93f9
red  = #ff5555
white  = #f8f8f2
yellow  = #f1fa8c
primary = ${self.purple}
alert = ${self.yellow}
disabled = ${self.orange}

[bar/main]
width = 100%
height = 16pt
radius = 0
background = ${colors.bg}
foreground = ${colors.fg}

line-size = 2pt
border-size = 0pt
border-color = #00000000

padding-left = 0
padding-right = 1
module-margin = 1

font-0 = JetBrains Mono:weight=regular:fontformat=truetype:size=10:antialias=true;1
font-1 = Weather Icons:style=regular:size=10;2
font-2 = Noto Color Emoji:style=regular:scale=8:size=8;3
modules-left = xworkspaces xwindow
modules-right = date mediaplayer openweathermap cpu temperature memory wlan eth filesystem Slem1000 Slem2000 Storage pulseaudio battery
cursor-click = pointer
cursor-scroll = ns-resize
enable-ipc = true

wm-restack = i3
tray-position = right
scroll-up = "#13.prev"
scroll-down = "#i3.next"

[module/xworkspaces]
type = internal/xworkspaces

label-active = %name%
label-active-foreground = ${colors.white}
label-active-underline= ${colors.purple}
label-active-background= ${colors.comment}
label-active-padding = 1

label-occupied = %name%
label-occupied-padding = 1
label-occupied-foreground = ${colors.comment}

label-urgent = %name%
label-urgent-background = ${colors.alert}
label-urgent-padding = 1

label-empty = %name%
label-empty-foreground = ${colors.disabled}
label-empty-padding = 1

[module/xwindow]
type = internal/xwindow
format-foreground = ${colors.purple}
label = %title%
label-maxlen=16

[module/date]
type = internal/date
interval = 1
date = %H:%M %p - %d %b %y
label-foreground = ${colors.comment}

label = %date%

[module/mediaplayer]
type = custom/script
format-foreground= ${colors.pink}
exec = /home/c/.config/polybar/scripts/player.py -f '{icon} {artist} - {:t20:{title}:} {position}/{fmt-length}'
tail = true
click-left = /home/c/.config/polybar/scripts/player.py play-pause &
click-right = /home/c/.config/polybar/scripts/player.py previous &
click-middle = /home/c/.config/polybar/scripts/player.py next &

[module/openweathermap]
type = custom/script
format-foreground= ${colors.yellow}
exec = /home/c/.config/polybar/scripts/openweathermap.sh
interval = 600
label-font = 2

[network-base]
type = internal/network
interval = 5
format-connected = <label-connected>
format-disconnected = <label-disconnected>

[module/wlan]
inherit = network-base
interface-type = wireless
label-connected = %local_ip% %{F#6272a4}@%{F-} %netspeed%

[module/eth]
inherit = network-base
interface-type = wired
label-connected = %ifname% %signal%% (%local_ip%)

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /
mount-1 = /home

label-mounted = %{F#8be9fd}%mountpoint% %free%%{F-}
label-unmounted = 

[module/Slem1000]
type = internal/fs
interval = 25

mount-0 = /run/media/c/Slem1000

label-mounted = %{F#bd93f9}Slem1000 %free%%{F-}
label-unmounted = 

[module/Slem2000]
type = internal/fs
interval = 25

mount-2 = /run/media/c/Slem2000

label-mounted = %{F#bd93f9}Slem2000 %free%%{F-}
label-unmounted = 

[module/Storage]
type = internal/fs
interval = 25

mount-0 = /run/media/c/Storage

label-mounted = %{F#bd93f9}Storage%{F-} %free%
label-unmounted = 

[module/cpu]
type = internal/cpu
interval = 2
format-prefix-foreground = ${colors.primary}
label = %percentage:2%% 

[module/temperature]
type = internal/temperature

[module/memory]
type = internal/memory
interval = 2
format-prefix-foreground = ${colors.primary}
label = %gb_free%

[module/pulseaudio]
type = internal/pulseaudio

format-volume-prefix = "ðŸ”Š "
format-volume-prefix-foreground = ${colors.primary}
format-volume = <label-volume>

label-volume = %percentage%%

label-muted = muted
label-muted-foreground = ${colors.disabled}

[module/battery]
type = internal/battery
full-at = 95
low-at = 10
battery = BAT0
adapter = ADP0

label-charging = %{F#bd93f9}BAT%{F-}%{F#6272a4} + %{F-}%percentage%%
label-discharging = %{F#bd93f9}BAT%{F-}%{F#6272a4} - %{F-}%percentage%%
label-full = %{F#bd93f9}BAT%{F-}%{F#6272a4} ~ %{F-}%percentage%%
label-low = %{F#bd93f9}BAT%{F-}%{F#6272a4} ! %{F-}%percentage%%



[settings]
screenchange-reload = true
pseudo-transparency = true

