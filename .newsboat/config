# Browser OSX
browser "open -a 'Brave Browser' '%u'"

# browser /usr/bin/open -a "/Applications/Brave Browser.app" '%u'

# General
show-read-feeds no
refresh-on-startup yes
text-width 80
reload-threads 8

# unbind keys
unbind-key ENTER
unbind-key j
unbind-key k
unbind-key J
unbind-key K

# bind keys - vim style
bind-key j down
bind-key k up
bind-key l open
bind-key h quit

